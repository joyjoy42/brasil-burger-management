@model BrasilBurger.Web.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}

<div class="auth-page">
    <div class="auth-top-section">
        <a href="/Account/Login" class="auth-back-btn">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h1 class="auth-title">Forgot Password</h1>
        <p class="auth-subtitle">Enter your email to receive a password reset token</p>
    </div>

    <div class="auth-form-container">
        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["InfoMessage"]
            </div>
        }

        <form asp-action="ForgotPassword" method="post" asp-antiforgery="true">
            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

            <div class="form-group-custom">
                <label class="form-label-custom" asp-for="Email">EMAIL</label>
                <input asp-for="Email" type="email" class="form-input-custom" placeholder="example@gmail.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="auth-submit-btn">SEND RESET TOKEN</button>
        </form>

        <div class="auth-signup-link">
            Remember your password? <a asp-action="Login" href="/Account/Login" class="auth-link">LOG IN</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


