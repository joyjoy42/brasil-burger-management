@model BrasilBurger.Web.Models.ViewModels.DetailsMenuViewModel
@{
    ViewData["Title"] = Model.Menu.Nom;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12 mb-3">
            <a href="/Catalogue" class="btn btn-link">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
            <button class="btn btn-link float-right">
                <i class="far fa-heart"></i>
            </button>
        </div>
    </div>

    <!-- Product Image -->
    <div class="row mb-4">
        <div class="col-12">
            @{
                var menuImageUrl = BrasilBurger.Web.Helpers.ImageHelper.GetImageUrl(Model.Menu.Image, "/images/default-menu.png", Model.Menu.Nom);
                var menuPlaceholder = $"https://via.placeholder.com/800x400/FF6B35/FFFFFF?text={System.Web.HttpUtility.UrlEncode(Model.Menu.Nom)}";
            }
            <img src="@menuImageUrl.Replace("https://res.cloudinary.com/dbkji1d1j/image/upload/brasil-burger/", "")" 
                 alt="@Model.Menu.Nom" 
                 class="img-fluid rounded"
                 style="width: 100%; max-height: 400px; object-fit: cover;"
                 />
        </div>
    </div>

    <!-- Product Info -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-2">@Model.Menu.Nom</h1>
            <p class="text-muted mb-3">
                <i class="fas fa-map-marker-alt"></i> Brasil Burger Restaurant
            </p>
            <div class="d-flex align-items-center mb-3">
                <span class="badge badge-warning mr-3">
                    <i class="fas fa-star"></i> 4.8
                </span>
                <span class="text-muted mr-3">
                    <i class="fas fa-truck"></i> Livraison gratuite
                </span>
                <span class="text-muted">
                    <i class="fas fa-clock"></i> 20 min
                </span>
            </div>
            <p class="mb-4">@(Model.Menu.Description ?? "Menu complet et équilibré préparé avec des ingrédients frais et de qualité supérieure.")</p>
            @if (Model.Menu.Burger != null || Model.Menu.Boisson != null)
            {
                <div class="mb-3">
                    <h6>Contenu du menu:</h6>
                    <ul class="list-unstyled">
                        @if (Model.Menu.Burger != null)
                        {
                            <li><i class="fas fa-hamburger" style="color: var(--primary-orange);"></i> @Model.Menu.Burger.Nom</li>
                        }
                        @if (Model.Menu.Boisson != null)
                        {
                            <li><i class="fas fa-glass-whiskey" style="color: var(--primary-orange);"></i> @Model.Menu.Boisson.Nom</li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>

    <!-- Price and Quantity -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 style="color: var(--primary-orange); font-weight: bold;" class="mb-0">@Model.Menu.Prix.ToString("N0") FCFA</h3>
                </div>
                <div class="quantity-selector">
                    <button type="button" class="quantity-btn" onclick="decreaseQuantity()">-</button>
                    <span id="quantity">1</span>
                    <button type="button" class="quantity-btn" onclick="increaseQuantity()">+</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Add to Cart Button -->
    <div class="row mb-5">
        <div class="col-12">
            @if (User.Identity.IsAuthenticated)
            {
                <form method="post" action="/Commande/AjouterAuPanier" id="addToCartForm">
                    <input type="hidden" name="type" value="menu" />
                    <input type="hidden" name="id" value="@Model.Menu.Id" />
                    <input type="hidden" name="quantite" id="hiddenQuantity" value="1" />
                    <button type="submit" class="btn btn-primary btn-block btn-lg">
                        <i class="fas fa-shopping-cart"></i> AJOUTER AU PANIER
                    </button>
                </form>
            }
            else
            {
                <a href="/Account/Login?returnUrl=/Catalogue/DetailsMenu/@Model.Menu.Id" class="btn btn-primary btn-block btn-lg">
                    <i class="fas fa-sign-in-alt"></i> CONNEXION POUR COMMANDER
                </a>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let quantity = 1;

        function increaseQuantity() {
            quantity++;
            document.getElementById('quantity').textContent = quantity;
            document.getElementById('hiddenQuantity').value = quantity;
        }

        function decreaseQuantity() {
            if (quantity > 1) {
                quantity--;
                document.getElementById('quantity').textContent = quantity;
                document.getElementById('hiddenQuantity').value = quantity;
            }
        }
    </script>
}
