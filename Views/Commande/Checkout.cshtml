@model BrasilBurger.Web.Models.ViewModels.PanierViewModel

@{
    ViewData["Title"] = "Paiement";
}

<div class="container mt-5">
    <div class="row g-5">
        <div class="col-md-7">
            <h4 class="mb-4 fw-bold">Détails de la commande</h4>
            <form asp-action="PasserCommande" method="post" id="checkout-form">
                <div class="card border-0 shadow-sm rounded-4 p-4 mb-4">
                    <h6 class="fw-bold mb-3">Type de commande</h6>
                    <div class="d-flex gap-4 mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="typeCommande" id="sur_place" value="sur_place" checked>
                            <label class="form-check-label" for="sur_place">Sur place</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="typeCommande" id="a_emporter" value="a_emporter">
                            <label class="form-check-label" for="a_emporter">À emporter</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="typeCommande" id="livraison" value="livraison">
                            <label class="form-check-label" for="livraison">Livraison</label>
                        </div>
                    </div>

                    <div id="delivery-info" style="display: none;">
                        <h6 class="fw-bold mb-3">Zone de livraison</h6>
                        <select name="zoneLivraisonId" class="form-select mb-3">
                            <option value="">Sélectionnez une zone...</option>
                            <!-- Zones will be populated from DB in a real app -->
                            <option value="1">Zone Centre (1000 FCFA)</option>
                            <option value="2">Zone Nord (1500 FCFA)</option>
                        </select>
                    </div>
                </div>

                <div class="card border-0 shadow-sm rounded-4 p-4 mb-4">
                    <h6 class="fw-bold mb-3">Paiement</h6>
                    <p class="small text-muted mb-3">Choisissez votre mode de paiement mobile.</p>
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="border rounded-3 p-3 text-center cursor-pointer payment-method active" data-method="wave">
                                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/c0/Wave_Mobile_Money_Logo.png/640px-Wave_Mobile_Money_Logo.png" style="height: 30px;" alt="Wave">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="border rounded-3 p-3 text-center cursor-pointer payment-method" data-method="om">
                                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/1a/Orange_logo.svg/1024px-Orange_logo.svg.png" style="height: 30px;" alt="OM">
                            </div>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill py-3 fw-bold">Confirmer et Payer</button>
            </form>
        </div>

        <div class="col-md-5">
            <div class="card border-0 shadow-sm rounded-4 p-4 sticky-top" style="top: 100px;">
                <h5 class="fw-bold mb-4">Votre Commande</h5>
                @foreach (var item in Model.Items)
                {
                    <div class="d-flex justify-content-between mb-3">
                        <div>
                            <span class="fw-bold">@item.Quantite x</span> @item.Nom
                        </div>
                        <span class="text-muted">@item.PrixTotal.ToString("C")</span>
                    </div>
                }
                <hr>
                <div class="d-flex justify-content-between mb-2">
                    <span class="h5 fw-bold">Total</span>
                    <span class="h5 fw-bold text-primary">@Model.Total.ToString("C")</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('input[name="typeCommande"]').forEach(radio => {
            radio.addEventListener('change', (e) => {
                const deliveryInfo = document.getElementById('delivery-info');
                deliveryInfo.style.display = e.target.value === 'livraison' ? 'block' : 'none';
            });
        });

        document.querySelectorAll('.payment-method').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.payment-method').forEach(b => b.classList.remove('active', 'border-primary'));
                this.classList.add('active', 'border-primary');
            });
        });
    </script>
    <style>
        .payment-method.active {
            border-color: var(--primary-color) !important;
            background-color: rgba(255, 193, 7, 0.05);
        }
        .cursor-pointer {
            cursor: pointer;
        }
    </style>
}
