@model BrasilBurger.Web.Models.Entities.Commande

@{
    ViewData["Title"] = "Confirmation";
}

<div class="container mt-5 text-center">
    <div class="mb-4">
        <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
            <i class="bi bi-check-lg display-3"></i>
        </div>
    </div>
    <h1 class="fw-bold mb-3">Merci pour votre commande !</h1>
    <p class="lead text-muted mb-5">Votre commande #@Model.Id a été enregistrée avec succès et est en cours de traitement.</p>

    <div class="row justify-content-center mb-5">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4 p-4 text-start">
                <h5 class="fw-bold mb-4">Détails de la commande</h5>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Status</span>
                    <span class="badge bg-warning text-dark">@Model.Statut</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Date</span>
                    <span>@Model.DateCommande.ToString("g")</span>
                </div>
                <div class="d-flex justify-content-between mb-4">
                    <span class="text-muted">Montant Total</span>
                    <span class="fw-bold text-primary">@Model.MontantTotal.ToString("C")</span>
                </div>

                <h6 class="fw-bold mb-3">Articles</h6>
                @foreach (var item in Model.LignesCommande)
                {
                    <div class="d-flex justify-content-between small mb-2">
                        <span>@item.Quantite x @(item.Burger?.Nom ?? item.Menu?.Nom ?? item.Complement?.Nom)</span>
                        <span>@item.PrixUnitaire.ToString("C")</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
        <a asp-controller="Catalogue" asp-action="Index" class="btn btn-outline-primary btn-lg px-5 rounded-pill">Continuer mes achats</a>
        <a asp-action="Suivi" asp-route-id="@Model.Id" class="btn btn-primary btn-lg px-5 rounded-pill fw-bold">Suivre ma commande</a>
    </div>
</div>
