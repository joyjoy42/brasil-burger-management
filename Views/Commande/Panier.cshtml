@model BrasilBurger.Web.Models.ViewModels.PanierViewModel

@{
    ViewData["Title"] = "Mon Panier";
}

<div class="container mt-5">
    <h1 class="mb-4 fw-bold">Votre Panier</h1>

    @if (!Model.Items.Any())
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-cart-x fs-1 text-muted"></i>
            </div>
            <h3>Votre panier est vide</h3>
            <p class="text-muted">Il semblerait que vous n'ayez pas encore fait votre choix.</p>
            <a asp-controller="Catalogue" asp-action="Index" class="btn btn-primary btn-lg rounded-pill px-5 mt-3">Voir le Menu</a>
        </div>
    }
    else
    {
        <div class="row g-5">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Produit</th>
                                    <th>Prix</th>
                                    <th>Quantité</th>
                                    <th>Total</th>
                                    <th class="pe-4"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center py-2">
                                                <img src="@(string.IsNullOrEmpty(item.Image) ? "/images/placeholder.jpg" : item.Image)" class="rounded-3 me-3" style="width: 60px; height: 60px; object-fit: cover;">
                                                <div>
                                                    <h6 class="mb-0 fw-bold">@item.Nom</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@item.PrixUnitaire.ToString("C")</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <button class="btn btn-sm btn-outline-secondary rounded-circle" style="width: 30px; height: 30px; padding: 0;">-</button>
                                                <span class="mx-3 fw-bold">@item.Quantite</span>
                                                <button class="btn btn-sm btn-outline-secondary rounded-circle" style="width: 30px; height: 30px; padding: 0;">+</button>
                                            </div>
                                        </td>
                                        <td class="fw-bold text-primary">@item.PrixTotal.ToString("C")</td>
                                        <td class="pe-4 text-end">
                                            <button class="btn btn-link text-danger p-0"><i class="bi bi-trash fs-5"></i></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow-sm rounded-4 p-4">
                    <h5 class="fw-bold mb-4">Résumé de la commande</h5>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Sous-total</span>
                        <span>@Model.Total.ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Livraison</span>
                        <span class="text-success">Gratuit</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-4">
                        <span class="h5 fw-bold">Total</span>
                        <span class="h5 fw-bold text-primary">@Model.Total.ToString("C")</span>
                    </div>
                    <a asp-action="Checkout" class="btn btn-primary w-100 py-3 fw-bold rounded-pill">Passer à la caisse</a>
                    <a asp-controller="Catalogue" asp-action="Index" class="btn btn-link w-100 mt-2 text-decoration-none text-muted">Continuer mes achats</a>
                </div>
            </div>
        </div>
    }
</div>
