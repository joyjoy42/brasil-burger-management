@{
    ViewData["Title"] = "Erreur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h1 class="display-1">@(ViewBag.StatusCode ?? "Erreur")</h1>
            <h2 class="mb-4">@(ViewBag.ErrorMessage ?? "Une erreur est survenue")</h2>
            
            @if (ViewBag.StatusCode == 400)
            {
                <div class="alert alert-warning">
                    <p><strong>Erreur 400 - Requête invalide</strong></p>
                    <p>Vérifiez que tous les champs du formulaire sont correctement remplis.</p>
                </div>
            }
            
            <a href="/Catalogue" class="btn btn-primary mt-3">
                <i class="fas fa-home"></i> Retour à l'accueil
            </a>
        </div>
    </div>
</div>
