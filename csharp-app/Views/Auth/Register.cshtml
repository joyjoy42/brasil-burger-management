@model BrasilBurgerClient.Models.User
@{
    ViewData["Title"] = "Inscription";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h2 class="text-center">Inscription</h2>
            <form asp-action="Register">
                <div class="form-group mb-3">
                    <label asp-for="Login"></label>
                    <input asp-for="Login" class="form-control" required />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Password">Mot de passe</label>
                    <input asp-for="Password" type="password" class="form-control" required />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Nom"></label>
                    <input asp-for="Nom" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Prenom"></label>
                    <input asp-for="Prenom" class="form-control" />
                </div>
                <button type="submit" class="btn btn-success w-100">S'inscrire</button>
            </form>
            <p class="mt-3 text-center">Déjà un compte ? <a asp-action="Login">Se connecter</a></p>
        </div>
    </div>
</div>
