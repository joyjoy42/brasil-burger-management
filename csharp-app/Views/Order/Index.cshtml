@model List<BrasilBurgerClient.Models.Order>
@using BrasilBurgerClient.Models
@{
    ViewData["Title"] = "Mes Commandes";
}

<div class="container mt-4">
    <h1>Mes Commandes</h1>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info mt-3">Vous n'avez pas encore passé de commande.</div>
    }
    else
    {
        <div class="table-responsive mt-3">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Etat</th>
                        <th>Total</th>
                        <th>Détails</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.DateCommande.ToShortDateString()</td>
                            <td>@order.TypeCommande</td>
                            <td>
                                <span class="badge @(order.Etat == OrderStatus.PAID ? "bg-success" : "bg-info")">
                                    @order.Etat
                                </span>
                            </td>
                            <td>@order.PrixTotal FCFA</td>
                            <td>
                                <button class="btn btn-outline-info btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#details-@order.Id">
                                    Voir
                                </button>
                            </td>
                        </tr>
                        <tr class="collapse" id="details-@order.Id">
                            <td colspan="5">
                                <ul class="list-group list-group-flush">
                                    @foreach (var detail in order.Details)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            @(detail.Product?.Nom ?? detail.Menu?.Nom)
                                            <span>x@detail.Quantite - @(detail.PrixUnitaire * detail.Quantite) FCFA</span>
                                        </li>
                                    }
                                </ul>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
