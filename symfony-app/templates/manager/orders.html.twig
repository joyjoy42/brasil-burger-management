{% extends 'base.html.twig' %}

{% block title %}Gestion des commandes - Burger Manager{% endblock %}

{% block body %}
<div class="page-header">
    <h1>Gestion des commandes</h1>
    <p>Gérez et suivez toutes vos commandes</p>
</div>

<div class="card" style="margin-bottom: 24px;">
    <form method="get" style="display: flex; flex-wrap: wrap; gap: 16px; align-items: flex-end;">
        <div style="flex: 1; min-width: 200px;">
            <label style="display: block; font-size: 14px; margin-bottom: 8px; color: #374151;">Rechercher</label>
            <div style="position: relative;">
                <svg xmlns="http://www.w3.org/2000/svg" style="position: absolute; left: 12px; top: 50%; transform: translateY(-50%); width: 18px; height: 18px; color: #9CA3AF;" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
                <input type="text" name="search" value="{{ filters.search }}" placeholder="Rechercher..." style="width: 100%; padding: 8px 8px 8px 40px; border: 1px solid #E5E7EB; border-radius: 8px; font-size: 14px;">
            </div>
        </div>

        <div>
            <label style="display: block; font-size: 14px; margin-bottom: 8px; color: #374151;">Tous les types</label>
            <select name="type" style="padding: 8px 12px; border: 1px solid #E5E7EB; border-radius: 8px; font-size: 14px; background-color: white;">
                <option value="all">Tous les types</option>
                <option value="SUR_PLACE" {% if filters.type == 'SUR_PLACE' %}selected{% endif %}>Sur place</option>
                <option value="A_EMPORTER" {% if filters.type == 'A_EMPORTER' %}selected{% endif %}>À emporter</option>
                <option value="LIVRAISON" {% if filters.type == 'LIVRAISON' %}selected{% endif %}>Livraison</option>
            </select>
        </div>

        <div>
            <label style="display: block; font-size: 14px; margin-bottom: 8px; color: #374151;">Tous les états</label>
            <select name="status" style="padding: 8px 12px; border: 1px solid #E5E7EB; border-radius: 8px; font-size: 14px; background-color: white;">
                <option value="all">Tous les états</option>
                <option value="PENDING" {% if filters.status == 'PENDING' %}selected{% endif %}>En attente</option>
                <option value="PAID" {% if filters.status == 'PAID' %}selected{% endif %}>Payée</option>
                <option value="READY" {% if filters.status == 'READY' %}selected{% endif %}>Prête</option>
                <option value="FINISHED" {% if filters.status == 'FINISHED' %}selected{% endif %}>Terminée</option>
                <option value="DELIVERED" {% if filters.status == 'DELIVERED' %}selected{% endif %}>Livrée</option>
                <option value="CANCELLED" {% if filters.status == 'CANCELLED' %}selected{% endif %}>Annulée</option>
            </select>
        </div>

        <div>
            <label style="display: block; font-size: 14px; margin-bottom: 8px; color: #374151;">Date</label>
            <input type="date" name="date" value="{{ filters.date }}" style="padding: 8px 12px; border: 1px solid #E5E7EB; border-radius: 8px; font-size: 14px; background-color: white;">
        </div>

        <button type="submit" class="btn btn-primary">Filtrer</button>
    </form>
</div>

<div class="card" style="padding: 0; overflow: hidden;">
    <table class="table">
        <thead>
            <tr>
                <th style="width: 120px;">N° Commande</th>
                <th>Client</th>
                <th>Type</th>
                <th>Articles</th>
                <th>Statut</th>
                <th>Date</th>
                <th>Total</th>
                <th style="text-align: right;">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for order in orders %}
            <tr>
                <td style="font-weight: 600;">#{{ "%03d"|format(order.id) }}</td>
                <td>{{ order.client.prenom }} {{ order.client.nom }}</td>
                <td>
                    <span class="badge" style="background-color: #F3F4F6; color: #4B5563;">
                        {{ order.typeCommande|replace({'_': ' '})|capitalize }}
                    </span>
                </td>
                <td style="font-size: 13px; color: #6B7280; max-width: 250px;">
                    {# Note: Need to implement a method to get item summary in the Entity or Repository #}
                    Menu Classic, Frites, Coca {# Placeholder for now #}
                </td>
                <td>
                    {% if order.etat == 'PENDING' %}
                        <span class="badge" style="background-color: #DBEAFE; color: #1E40AF; display: flex; align-items: center; gap: 4px; width: fit-content;">
                            <svg xmlns="http://www.w3.org/2000/svg" style="width: 14px; height: 14px;" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                            En cours
                        </span>
                    {% elseif order.etat == 'PAID' %}
                        <span class="badge" style="background-color: #D1FAE5; color: #065F46;">Payée</span>
                    {% elseif order.etat == 'CANCELLED' %}
                        <span class="badge" style="background-color: #FEE2E2; color: #991B1B;">Annulée</span>
                    {% else %}
                        <span class="badge" style="background-color: #F3F4F6; color: #4B5563;">{{ order.etat }}</span>
                    {% endif %}
                </td>
                <td style="font-size: 13px;">{{ order.dateCommande|date('Y-m-d H:i') }}</td>
                <td style="font-weight: 600;">{{ order.prixTotal|number_format(0, ',', ' ') }} FCFA</td>
                <td style="text-align: right;">
                    <a href="#" class="btn btn-primary" style="padding: 6px 12px; font-size: 13px;">Gérer</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="8" style="text-align: center; padding: 40px; color: #6B7280;">Aucune commande trouvée</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
