{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - Burger Manager{% endblock %}

{% block body %}
<div class="page-header">
    <h1>Tableau de bord</h1>
    <p>Vue d'ensemble des statistiques journalières</p>
</div>

<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon" style="background-color: #3B82F6;">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" /></svg>
            </div>
            <span style="color: #10B981; font-size: 12px; font-weight: 600;">↗ +3</span>
        </div>
        <div class="stat-value">{{ pendingToday }}</div>
        <div class="stat-label">Commandes en cours</div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon" style="background-color: #10B981;">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            </div>
            <span style="color: #10B981; font-size: 12px; font-weight: 600;">↗ +12</span>
        </div>
        <div class="stat-value">{{ validatedToday }}</div>
        <div class="stat-label">Commandes validées</div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon" style="background-color: #FF5A00;">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            </div>
            <span style="color: #10B981; font-size: 12px; font-weight: 600;">↗ +8%</span>
        </div>
        <div class="stat-value">{{ revenueToday|number_format(0, ',', ' ') }} FCFA</div>
        <div class="stat-label">Recettes du jour</div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon" style="background-color: #EF4444;">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            </div>
            <span style="color: #EF4444; font-size: 12px; font-weight: 600;">↘ -2</span>
        </div>
        <div class="stat-value">{{ cancelledToday }}</div>
        <div class="stat-label">Commandes annulées</div>
    </div>
</div>

<div style="display: grid; grid-template-columns: 3fr 2fr; gap: 24px;">
    <div class="card">
        <h3 style="margin-top: 0; margin-bottom: 24px; font-size: 18px; color: #111827;">Commandes de la semaine</h3>
        <div style="height: 200px; display: flex; align-items: flex-end; gap: 12px; padding-top: 20px;">
            {% set max_revenue = 0 %}
            {% for data in weeklyRevenue %}
                {% if data.revenue > max_revenue %}{% set max_revenue = data.revenue %}{% endif %}
            {% endfor %}
            {% if max_revenue == 0 %}{% set max_revenue = 100 %}{% endif %}

            {% for data in weeklyRevenue %}
                <div style="flex: 1; display: flex; flex-direction: column; align-items: center; gap: 8px;">
                    <div style="width: 100%; max-width: 40px; background-color: var(--primary-color); border-radius: 4px; height: {{ (data.revenue / max_revenue * 150)|round }}px; transition: height 0.3s ease;"></div>
                    <span style="font-size: 12px; color: #6B7280;">{{ data.day }}</span>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="card">
        <div style="display: flex; align-items: center; gap: 8px; margin-bottom: 24px;">
            <svg xmlns="http://www.w3.org/2000/svg" style="width: 20px; height: 20px; color: #FF5A00;" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" /></svg>
            <h3 style="margin: 0; font-size: 18px; color: #111827;">Burgers les plus vendus</h3>
        </div>
        
        <div style="display: flex; flex-direction: column; gap: 16px;">
            {% for burger in topBurgers %}
                <div style="display: flex; align-items: center; justify-content: space-between;">
                    <div style="display: flex; align-items: center; gap: 12px;">
                        <span style="width: 24px; height: 24px; border-radius: 50%; background-color: #FEF3C7; color: #D97706; display: flex; align-items: center; justify-content: center; font-size: 12px; font-weight: 700;">{{ loop.index }}</span>
                        <div>
                            <div style="font-weight: 600; font-size: 14px; color: #111827;">{{ burger.nom }}</div>
                            <div style="font-size: 12px; color: #6B7280;">{{ burger.total }} ventes</div>
                        </div>
                    </div>
                    <div style="font-weight: 700; font-size: 14px; color: #111827;">{{ (burger.revenue)|number_format(0, ',', ' ') }} FCFA</div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
