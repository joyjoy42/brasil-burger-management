{% extends 'base_login.html.twig' %}

{% block title %}Connexion - Burger Manager{% endblock %}

{% block body %}
<div class="login-container">
    <div class="login-card">
        <div class="icon-header">
            <div class="icon-circle" style="background-color: white; color: #FF5A00;">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor"><path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
            </div>
        </div>
        <h1>Brasil Burger</h1>
        <p class="subtitle">Le meilleur burger en ville - Manager</p>

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="form-group">
                <label for="inputLogin">Nom d'utilisateur</label>
                <div class="input-with-icon">
                    <span class="icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                    </span>
                    <input type="text" value="{{ last_username }}" name="login" id="inputLogin" class="form-control" autocomplete="username" placeholder="Entrez votre nom" required autofocus>
                </div>
            </div>

            <div class="form-group">
                <label for="inputPassword">Mot de passe</label>
                <div class="input-with-icon">
                    <span class="icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
                    </span>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Entrez votre mot de passe" required>
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn-login" type="submit">
                Se connecter
            </button>
        </form>
    </div>
</div>
{% endblock %}
